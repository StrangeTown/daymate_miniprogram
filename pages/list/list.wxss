/* pages/list/list.wxss */

.list-container {
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #f1f3f4 100%);
}

.event-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08), 0 3rpx 10rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.event-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1), 0 1rpx 5rpx rgba(0, 0, 0, 0.06);
}

.event-details {
  flex: 1;
  margin-right: 24rpx;
}

.event-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.event-date {
  font-size: 26rpx;
  color: #666;
  margin-top: 4rpx;
  opacity: 0.8;
}

.days-left {
  font-size: 30rpx;
  font-weight: 600;
  text-align: right;
  min-width: 120rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  color: white;
  text-align: center;
}

.days-left-urgent {
  background: linear-gradient(135deg, #E96354 0%, #ff7961 100%);
  box-shadow: 0 4rpx 12rpx rgba(233, 99, 84, 0.3);
}

.days-left-normal {
  background: linear-gradient(135deg, #8e8e93 0%, #a8a8aa 100%);
  box-shadow: 0 4rpx 12rpx rgba(142, 142, 147, 0.3);
}