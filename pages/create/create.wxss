/* pages/create/create.wxss */

.create-container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

.form-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.input-group {
  margin-bottom: 40rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.letters-section {
  margin-bottom: 40rpx;
}

.letters-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.letter-item {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
  line-height: 1;
}

.letter-item.selected {
  border-color: #6c757d;
  background-color: #6c757d;
  color: white;
}

.letter-item:active {
  transform: scale(0.95);
}

.images-section {
  margin-bottom: 40rpx;
}

.images-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.image-item {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  background-color: #fff;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  cursor: pointer;
  transition: all 0.2s;
  overflow: hidden;
}

.image-item.selected {
  border-color: #6c757d;
  box-shadow: 0 0 8rpx rgba(108, 117, 125, 0.3);
}

.image-item:active {
  transform: scale(0.95);
}

.event-image-preview {
  width: 60rpx;
  height: 60rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #6c757d;
  outline: none;
}

.date-picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
}

.date-text {
  font-size: 28rpx;
  color: #333;
}

.picker-icon {
  font-size: 24rpx;
}

.button-section {
  padding: 0 20rpx;
}

.save-button {
  width: 100%;
  height: 88rpx;
  background-color: #6c757d;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(108, 117, 125, 0.3);
}

.save-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(108, 117, 125, 0.4);
}