/* pages/home/home.wxss */

/* Fixed Top Countdown */
.countdown-container {
  position: fixed;
  top: 88px;
  left: 0;
  right: 0;
  height: 80rpx;
  /* subtle diagonal gradient */
  background: linear-gradient(90deg, #5a6b77 0%, #6c757d 40%, #7f8a92 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  border-bottom: 1rpx solid rgba(173, 181, 189, 0.25);
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.08);
}

.countdown-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

.countdown-title {
  color: #ffffff;
  font-weight: bold;
}

.countdown-days {
  color: #ffffff;
}

.calendar-scroll-container {
  height: calc(100vh - 44px - 80rpx);
  background-color: #f5f5f5;
  padding-top: 80rpx;
}

.calendar-container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

.calendar-month {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.calendar-month:last-child {
  margin-bottom: 80rpx;
}

.month-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.month-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.calendar-grid {
  width: 100%;
}

.week-header {
  display: flex;
  margin-bottom: 20rpx;
}

.day-header {
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: #999;
}

.week-row {
  display: flex;
  width: 100%;
  margin-bottom: 10rpx;
}

.day-cell {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-sizing: border-box;
}

.day-circle {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* full-width bar behind the circle to show continuous range */
.day-bar {
  width: 100%;
  height: 60rpx; /* match day-circle height */
  z-index: 0;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.day-bar.in-range {
  background-color: #ffe5e0;
}

.day-bar.has-event {
}

.day-bar.range-start {
  border-radius: 8rpx 0 0 8rpx;
}

.day-bar.range-end {
  border-radius: 0 8rpx 8rpx 0;
}

.day-circle {
  z-index: 1; /* keep circle above the bar */
  border-radius: 50%;
}

.day-circle.today {
  position: relative;
}

.day-circle.today::after {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 8rpx;
  height: 8rpx;
  background-color: #E96354;
  border-radius: 50%;
}

.day-circle.has-event::after {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 4rpx;
  background-color: #E96354;
}

.day-circle.today.has-event {
  position: relative;
  background-color: #E96354;
}

.day-circle.today.has-event::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 8rpx;
  height: 8rpx;
  background-color: #E96354;
  border-radius: 50%;
}

.day-cell.empty {
  /* Don't use visibility: hidden, just make it transparent */
}

.day-cell.empty .day-text {
  opacity: 0;
}

.day-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.day-circle.has-event .day-text {
  font-weight: bold;
}

.day-circle.today .day-text {
  color: #333;
  font-weight: bold;
}

/* Hover effect for non-empty days */
.day-cell:not(.empty):not(.today):active {
  background-color: #e6f3ff;
  border-radius: 50%;
}

/* Buttons */
.buttons-container {
  position: fixed;
  bottom: 80rpx;
  right: 42rpx;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.create-button {
  width: 100rpx !important;
  height: 100rpx !important;
  border-radius: 50%;
  background-color: #6c757d;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 30rpx rgba(108, 117, 125, 0.5), 0 4rpx 12rpx rgba(108, 117, 125, 0.3);
  margin-bottom: 20rpx;
}

.create-button-icon {
  width: 32rpx;
  height: 32rpx;
}

.create-button:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 25rpx rgba(108, 117, 125, 0.6);
}

.list-button {
  width: 100rpx !important;
  height: 100rpx !important;
  border-radius: 50%;
  background-color: #6c757d;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 30rpx rgba(108, 117, 125, 0.5), 0 4rpx 12rpx rgba(108, 117, 125, 0.3);
}

.list-button-icon {
  width: 32rpx;
  height: 32rpx;
}

.list-button:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 25rpx rgba(108, 117, 125, 0.6);
}